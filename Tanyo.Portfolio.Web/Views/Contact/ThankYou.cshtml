@inject SharedLocalizationService sharedLocalizer
@inject IViewLocalizer localizer
@{
    ViewData["Title"] = "Thank You";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-margin">
    <div class="container">
        <div class="row">
            <div class="col-3"></div>
            <div class="col-6">
                <h2 class="thank-you-title text-center">@localizer["thank-you-title"]</h2>
            </div>
            <div class="col-3"></div>
        </div>
        <div class="row">
            <div class="col-3"></div>
            <div class="col-6">
                <h4 class="thank-you-message text-center">@localizer["thank-you-message"]</h4>
            </div>
            <div class="col-3"></div>
        </div>
    </div>
</section>