@using Tanyo.Portfolio.Web.Models.Partials
@inject SharedLocalizationService sharedLocalizer
@inject IViewLocalizer localizer
@{
    ViewData["Title"] = "Post";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="blog_area single-post-area section-margin">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 posts-list">
                <div class="single-post">
                    <div class="blog_details">
                        <h2>
                            @localizer["Design Patterns Package"]
                        </h2>
                        <ul class="blog-info-link mt-3 mb-4">
                            <li><i class="ti-user"></i> @localizer["Tanyo Ivanov"]</li>
                            <li><i class="ti-calendar"></i> @localizer["Mar"] 22, 2020</li>
                        </ul>
                        <p style="width: 60%; text-align: center; margin: auto; padding-bottom: 40px;">
                            @localizer["Hello friends"],<br />
                            @localizer["Here you can find a package with Design Patterns which I made while watching a YouTube channel.There is explanation and a video about all of them."]
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-6 p-0">
                <iframe class="p-0" width="400" height="250" src="https://www.youtube.com/embed/3GeWIYRPVhw" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>
            <div class="text-center col-sm-12 col-md-12 col-lg-6 p-0">
                <strong>@localizer["Here are the resources"]</strong><br />
                <a target="_blank" href="https://www.youtube.com/watch?v=3GeWIYRPVhw">@localizer["Design Patterns YouTube Playlist"]</a><br />
                <a target="_blank" href="~/files/DesignPatterns.zip">@localizer["Download Design Patterns Package"]</a><br />
                <a target="_blank" href="https://facebook.com/dev.tanyoivanov">@localizer["Facebook"]</a><br />
                <a target="_blank" href="https://linkedin.com/in/tanyo-ivanov">@localizer["LinkedIn"]</a><br />
                <a target="_blank" href="https://twitter.com/TanyoIvanov">@localizer["Twitter"]</a><br />

                @localizer["Hope you enjoyed, see you in the next videos"] :)<br />
                @localizer["Regards"],<br />
                @localizer["Tanyo Ivanov"]
            </div>
        </div>
        <div id="disqus_thread"></div>
        <script>
            const PAGE_URL = 'https://tanyoivanov.net';
            const PAGE_IDENTIFIER = location.href;
            var disqus_config = function () {
                this.page.url = PAGE_URL;
                this.page.identifier = PAGE_IDENTIFIER;
            };
            (function () {
                var d = document, s = d.createElement('script');
                s.src = 'https://tanyo-takerman-net-1.disqus.com/embed.js';
                s.setAttribute('data-timestamp', +new Date());
                (d.head || d.body).appendChild(s);
            })();
        </script>
        <noscript>@localizer["Please enable JavaScript to view the comments."]</noscript>
    </div>
</section>